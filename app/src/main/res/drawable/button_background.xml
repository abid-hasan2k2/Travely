<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <solid android:color="@color/custom_button_color"/> <!-- Custom color when pressed -->
            <corners android:radius="8dp"/>
        </shape>
    </item>
    <item>
        <shape>
            <solid android:color="@color/custom_button_color"/> <!-- Custom color when not pressed -->
            <corners android:radius="8dp"/>
        </shape>
    </item>
</selector>
